<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Icons Container -->
        <LinearLayout
            android:id="@+id/iconsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_code"
                android:layout_marginEnd="16dp"
                android:alpha="0"/>

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_user"
                android:layout_marginEnd="16dp"
                android:alpha="0"/>

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_code"
                android:alpha="0"/>

        </LinearLayout>

        <!-- Welcome Text Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome To My"
                android:textSize="24sp"
                android:textColor="@color/welcome_text"
                android:alpha="0"/>

            <TextView
                android:id="@+id/portfolioText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Portfolio Website"
                android:textSize="32sp"
                android:textColor="@color/portfolio_text"
                android:layout_marginTop="8dp"
                android:alpha="0"/>

        </LinearLayout>

        <!-- Website Link -->
        <TextView
            android:id="@+id/websiteLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/website_link"
            android:alpha="0"
            android:background="@drawable/website_link_background"
            android:padding="12dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 